<div class="container-sm my-5 border">
    <h1>Manage Labs</h1>
    <nav class="navbar navbar-expand-sm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="/dashboard/{{_id}}" class="nav-link">
                    Dashboard
                </a>
            </li>
        </ul>
    </nav>

    <!-- create labs -->
    <form action="/create-lab" method="POST">
        <div>
            <label class="form-label" for="startTime">Start Time</label>
            <select class="form-select" id="startTime" name="startTime">
                <!-- temp options -->
                <option value="10:00">10:00am</option>
                <option value="10:30">10:30am</option>
                <option value="11:00">11:00am</option>
                <option value="11:30">11:30am</option>
                <option value="12:00">12:00pm</option>
                <option value="12:30">12:30pm</option>
                <option value="1:00">1:00pm</option>
                <option value="1:30">1:30pm</option>
                <option value="2:00">2:00pm</option>
                <option value="2:30">2:30pm</option>
                <option value="3:00">3:00pm</option>
                <option value="3:30">3:30pm</option>
                <option value="4:00">4:00pm</option>
            </select>
        </div>

        <div>
            <label class="form-label" for="endTime">End Time</label>
            <select class="form-select" id="endTime" name="endTime">
                <!-- temp options -->
                <option value="10:00">10:00am</option>
                <option value="10:30">10:30am</option>
                <option value="11:00">11:00am</option>
                <option value="11:30">11:30am</option>
                <option value="12:00">12:00pm</option>
                <option value="12:30">12:30pm</option>
                <option value="1:00">1:00pm</option>
                <option value="1:30">1:30pm</option>
                <option value="2:00">2:00pm</option>
                <option value="2:30">2:30pm</option>
                <option value="3:00">3:00pm</option>
                <option value="3:30">3:30pm</option>
                <option value="4:00">4:00pm</option>
            </select>
        </div>

        <div>
            <label class="form-label" for="seatCount">Number of Seats</label>
            <input class="form-control" type="number" id="seatCount" name="seatCount" min="1" value="20" required>
        </div>

        <button class="btn btn-outline-success mt-3" type="submit">Create Lab</button>
    </form>

    <!-- delete labs -->
    <form action="/delete-lab" method="DELETE">
        <div>
            <label for="lab">Select Lab</label>
            <select class="form-select" id="lab" name="lab"></select>
        </div>

        <button class="btn btn-outline-danger" type="submit">Delete Lab</button>
    </form>
</div>