<h1>Profile</h1>
<div class="container-sm my-5 border">
    <div>
        <nav class="navbar navbar-expand-sm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="/dashboard/{{user._id}}" class="nav-link">
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <form action="/logout" method="POST">
                    <a href="/logout" class="nav-link">
                        Logout
                    </a>
                </form>
            </li>
        </ul>
    </nav>

        <form action="/edit-profile/id/{{#if studentID}}{{studentID}}{{else}}{{techID}}{{/if}}" method="POST">
            <div>
                <img src="{{image}}">
                <input class="form-control" type="file" id="image" name="image" {{#if notEditing}}disable{{/if}}>
            </div>

            <div>
                <label class="form-label" for="displayName">Display Name</label>
                <input class="form-control" id="displayName" name="displayName" value="{{displayName}}" {{#if notEditing}}readonly{{/if}}>
            </div>

            <div>
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" {{#if notEditing}}readonly{{/if}}>{{description}}</textarea>
            </div>

            <button class="btn btn-outline-success" type="submit">Edit Profile</button>
        </form>
    </div>
</div>