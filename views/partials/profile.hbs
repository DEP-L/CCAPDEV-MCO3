<h1>Profile</h1>
<div class="container">
    <div>
        {{#if isEditing}}
            <form action="/edit-profile/id/{{#if studentID}}{{studentID}}{{else}}{{techID}}{{/if}}" method="POST">
                <!-- Your existing form with editable fields -->
                <div>
                <img src="{{image}}">
                <input type="file" id="image" name="image">
                </div>

                <div>
                <label for="displayName">Display Name</label>
                <input id="displayName" name="displayName" value="{{displayName}}">
                </div>

                <div>
                <label for="description">Profile Description</label>
                <textarea id="description" name="description">{{description}}</textarea>
                </div>

                <button type="submit">Save Changes</button>
            </form>
        {{else}}
            <!-- View-only version with disabled fields -->
            <div>
                <img src="{{image}}">
                <input type="file" id="image" name="image" disabled>
            </div>

            <div>
                <label for="displayName">Display Name</label>
                <input id="displayName" name="displayName" value="{{displayName}}" readonly>
            </div>

            <div>
                <label for="description">Profile Description</label>
                <textarea id="description" name="description" readonly>{{description}}</textarea>
            </div>

            {{#if isOwner}}
                <a href="/profile/id/{{#if studentID}}{{studentID}}{{else}}{{techID}}{{/if}}?edit=true&ownerID={{#if studentID}}{{studentID}}{{else}}{{techID}}{{/if}}" class="btn btn-edit-profile">
                    Edit Profile
                </a>
            {{/if}}
        {{/if}}
    </div>
</div>